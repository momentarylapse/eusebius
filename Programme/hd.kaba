#define __OS__
use "prog_header.kaba"


void hd(string filename)
	int h = open(filename)
	if h < 0
		print("hd: kann Datei nicht oeffnen: " + filename + "\n")
	string s
	while true
		s.resize(128)
		int r = read(h, &s[0], 128)
		if r <= 0
			break
		s.resize(r)
		print(s.hex(false))
	close(h)
	print("\n")


void main()
	init_lib()
	string arg[]
	get_args(arg)
	
	for int i, 1, arg.num
		hd(arg[i])
	
	exit(0)
