void cat(string filename)
	int h = open(filename)
	if h < 0
		prints("  --kann Datei nicht oeffnen--\n")
	string s
	while true
		s.resize(128)
		int r = read(h, &s[0], 128)
		if r <= 0
			break
		s.resize(r)
		prints(s)
	close(h)

void hd(string filename)
	int h = open(filename)
	if h < 0
		prints("  --kann Datei nicht oeffnen--\n")
	string s
	while true
		s.resize(128)
		int r = read(h, &s[0], 128)
		if r <= 0
			break
		printh(&s[0], r)
	close(h)
	prints("\n")

string cwd

void prompt()
	prints(cwd)
	prints(": ")

void exec(string cmd)
	string c[]
	for int i, 0, cmd.num
		if cmd[i] != ' '
			string t
			t.clear()
			for int j, i, cmd.num
				if cmd[j] == ' '
					break
				t.add(cmd[j])
				i = j
			c.add(t)
	if c.num == 0
		return
	//prints(c.join("."))
	string cc = c[0]
	if cc == "cd"
		if c.num > 1
			cwd = c[1]
		else
			prints("Verzeichnis?\n")
	else if cc == "cat"
		if c.num > 1
			cat(c[1])
	else if cc == "hd"
		if c.num > 1
			hd(c[1])
	else if cc == "ls"
		prints("ls....\n")
	else
		prints("unbekannter Befehl: ")
		prints(cc)
		prints("\n")
	
string command

void process(int k)
	if (k & 0x80) > 0
		if k == 0xaa or k == 0xb6
			shift = false
		return
	int c = getchar(k)
	if c == 0x0a // '\n'
		prints("\n")
		if command.num > 0
			exec(command)
		prompt()
		command.clear()
	else if c > 0
		string s
		s.add(c)
		prints(s)
		command.add(c)
	else if k == 0x2a or k == 0x36
		shift = true
	//else
	//	printh(&k, 2)

