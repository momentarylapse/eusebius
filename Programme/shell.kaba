int printh(cstring *data, int size)
	string ttt
	ttt.resize(3)
	for int i, 0, size
		int d = data[i]
		int d1 = (d>>4)
		int d2 = (d&15)
		if d1 < 10
			ttt[0] = d1+48
		else
			ttt[0] = d1+87
		if d2<10
			ttt[1] = d2+48
		else
			ttt[1] = d2+87
		if i == size-1
			ttt[2] = ' '
		else
			ttt[2] = '.'
		prints(ttt)


