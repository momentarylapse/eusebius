void *_p
int _i1, _i2, _i3

void s2cs(string s, cstring cs)
	for int i, 0, s.num
		cs[i] = s[i]
	cs[s.num] = 0

int open(string filename)
	cstring tt
	s2cs(filename, tt)
	_p = &tt
	asm{
		mov eax, 0x00000005
		mov ebx, _p
		int 0x80
		mov _i1, eax
	}
	return _i1
	
void close(int h)
	_i1 = h
	asm{
		mov eax, 0x00000006
		mov ebx, _i1
		int 0x80
	}

int read(int h, cstring *buf, int size)
	_i1 = h
	_i2 = size
	_p = buf
	asm{
		mov eax, 0x00000003
		mov ebx, _i1
		mov ecx, _p
		mov edx, _i2
		int 0x80
		mov _i3, eax
	}
	return _i3
	
int write(int h, cstring *buf, int size)
	_i1 = h
	_i2 = size
	_p = buf
	asm{
		mov eax, 0x00000004
		mov ebx, _i1
		mov ecx, _p
		mov edx, _i2
		int 0x80
		mov _i3, eax
	}
	return _i3

void prints(string s)
	write(stdout, &s[0], s.num)


