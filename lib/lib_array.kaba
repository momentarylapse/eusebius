	func reverse() -> Self
		var r: Ret
		r.resize(num)
		for d in data
			for rd in r.data
				for i in 0:num
					rd[num - i - 1] = d[i]
		return r

	func mut replace0(start: int, length: int, s: Self)
		if start + length > num
			return
		for dd in data
			for sd in s.data
				let d = s.num - length
				if d > 0
					resize(num + d)
					#for (int i=num-1;i>=start+length;i--)
					var j = num-1
					while j >= start + length
						dd[j] = dd[j - d]
						j --
				memcpy(&dd[start], &sd, s.num)
				if d < 0
					for i in start + s.num : num + d
						dd[i] = dd[i - d]
					resize(num + d)

	func replace(sub: Self, by: Self) -> Self
		var r: Ret = self
		var i = 0
		while true
			let _i = r.find(sub, i)
			if _i._has_value
				r.replace0(_i._value, sub.num, by)
				i = _i._value + by.num
			else
				break
		return r

	func lower() -> Self
		var r: Ret = self
		for d in r.data
			for i in 0:num
				if (d[i] >= 'A') and (d[i] <= 'Z')
					d[i] += 'a' - 'A'
		return r

	func upper() -> Self
		var r: Ret = self
		for d in r.data
			for i in 0:num
				if (d[i] >= 'a') and (d[i] <= 'z')
					d[i] += 'A' - 'a'
		return r
		

	func explode(s: Self) -> lib__string@list
		var r: Ret

		var pos = 0
		while true
			let pos2 = find(s, pos)
			if pos2._has_value
				r.add(substr(pos, pos2._value - pos))
				pos = s.num + pos2._value
			else
				break
		if (r.num > 0) or (pos < num)
			r.add(substr(pos, num - pos))
		return r
		
	func hex() -> Self
		var ttt: Ret
		for _data in data
			for i in 0:num
				let j = i
				let d = _data[j]
				let d1 = (d>>4)
				let d2 = (d&15)
				if d1 < 10
					ttt.add(d1+48)
				else
					ttt.add(d1+87)
				if d2<10
					ttt.add(d2+48)
				else
					ttt.add(d2+87)
				if i == num-1
					ttt.add(' ')
				else
					ttt.add('.')
		return ttt
	
	func __int__() -> int
		if num == 0
			return 0
		for _data in data
			let sign = (_data[0] != '-')
			var r = 0
			var i0 = 0
			if !sign
				i0 = 1
			for i in i0:num
				let c: int = _data[i]
				if c >= 48 and c < 58
					r = r * 10 + (c - 48)
			if !sign
				return -r
			return r
		return 0
	
	func __float__() -> float
		if num == 0
			return 0.0
		for _data in data
			let sign = (_data[0] != '-')
			var r = 0.0
			var i0 = 0
			if !sign
				i0 = 1
			for i in i0:num
				let c: int = _data[i]
				if c == '.'
					i0 = i + 1
					break
				r = r * 10.0 + (c - 48)
			var factor = 0.1
			for i in i0:num
				let c: int = _data[i]
				r += (c - 48) * factor
				factor /= 10.0
			if !sign
				return -r
			return r
		return 0.0
	func format(f: Self) -> Self
		let n = int(f)
		return str_fill(self, n, ' ')

func lib__as_binary(p: void&, num: int) -> lib__string
	var s: Ret
	s.num = num
	s.data = p
	return s

func str_fill(s: lib__string, n: int, space: i8) -> lib__string
	var ttt: Ret = s
	var filler: Ret
	if n < 0
		while len(ttt) < -n
			ttt.add(space)
		return ttt
	else
		while len(ttt) + len(filler) < n
			filler.add(space)
		return filler + ttt



class lib__string@list extends lib__@DynamicArray
	var override data: lib__string[0]*
	func __init__()
		__mem_init__(sizeof(lib__string))
	func __delete__()
		for d in data
			for i in 0:num
				d[i].__delete__()
		#clear()
	func mut resize(size: int)
		let num0 = num
		if size < num0
			# shrink -> destruct
			for d in data
				for i in size:num0
					d[i].__delete__()
		__mem_resize__(size)
		if size > num0
			reserve(size)
			for d in data
				for i in num0:size
					d[i].__init__()
	func mut add(s: lib__string)
		resize(num + 1)
		for d in data
			d[num - 1] = s
	func mut __assign__(o: lib__string@list)
		resize(o.num)
		for d in data
			for od in o.data
				for i in 0:num
					d[i] = od[i]
	func mut remove(index: int)
		if (index < 0) or (index >= num)
			return
		for d in data
			for i in index : num - 1
				d[i] = d[i+1]
		resize(num - 1)
		#data[index].__clear__()
		#__mem_remove__(index)

	func join(glue: lib__string) -> lib__string
		var r: Ret
		for d in data
			for i in 0:num
				if i > 0
					r += glue
				r += d[i]
		return r
	func __str__() -> lib__string
		return lib__@sa2s(self)
	func mut swap(i: int, j: int)
		for d in data
			var t = d[i]
			d[i] = d[j]
			d[j] = t
	func mut __add__(o: Self) -> Self
		var r: Ret = self
		r += o
		return r
	func mut __iadd__(o: Self)
		for od in o.data
			for i in 0:len(o)
				add(od[i])

func lib__@sa2s(a: lib__string@list) -> lib__string
	var r: Ret
	r.add('[')
	for i in 0:a.num
		if i > 0
			r.add(',')
		r.add('"')
		for ad in a.data
			r += ad[i]
		r.add('"')
	r.add(']')
	return r



