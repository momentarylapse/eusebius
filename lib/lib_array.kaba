func lib__@ia2s(a: lib__int@list) -> lib__string
	var r: Ret
	r.add('[')
	for i in 0:a.num
		if i > 0
			r.add(',')
			r.add(' ')
		for d in a.data
			r += base@@i2s(d[i])
	r.add(']')
	return r

func lib__@fa2s(a: lib__float@list) -> lib__string
	var r: Ret
	r.add('[')
	for i in 0:a.num
		if i > 0
			r.add(',')
			r.add(' ')
		for d in a.data
			r += base@@f2s(d[i], 6)
	r.add(']')
	return r

