func base@@i2s(_i: int) -> lib__string
	var i = _i
	let sign = i >= 0
	if !sign
		i = -i
	var s: Ret
	while true
		s.add((i % 10) + 0x30)
		i /= 10
		if i == 0
			break
	if !sign
		s.add('-')
	return s.reverse()


func base@@f2s(_f: float, n: int) -> lib__string
	var f = _f
	var s: Ret
	
	if f < 0.0
		s.add('-')
		f = -f
	s += base@@i2s(f)
	if n > 0
		s.add('.')
		var e = 1
		var fe = 1.0
		for i in 0:n
			e = e *10
			fe *= 10.0
		let after = int(f*fe) % e
		for i in 0:n
			e /= 10
			s.add(((after / e) % 10) + 0x30)
	return s

func base@@b2s(b: bool) -> lib__string
	var r: Ret
	if b
		r.add('1')
	else
		r.add('0')
	return r

class lib__bool
	func static __str__(b: bool) -> lib__string
