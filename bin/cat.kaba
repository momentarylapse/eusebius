use lib.std.*
use lib.std.file.*


func cat(h: int)
	var s: string
	while true
		s.resize(128)
		let r = read(h, &s[0], len(s))
		if r < 0
			print("\nerror reading...\n")
		if r <= 0
			break
		s.resize(r)
		print(s)


func main()
	init_lib()
	lib_print_endl = false
	let args = get_args()
	
	if len(args) == 0
		cat(stdin)
	
	for a in args
		let h = open(a, O_RDONLY)
		if h < 0
			print("cat: can not open file: " + a)
			exit(-1)
		cat(h)
		let _ = close(h)
		#print FileRead(arg[i])
	
	exit(0)
