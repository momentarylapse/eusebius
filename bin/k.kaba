class SyntaxTree
	Variable*[] vars
	Variable*[] consts
	SyntaxNode* block
	
	Lines lines
	int cur_line_no
	Line cur_line
	int cur_word
	string cur
	bool endOfFile()
		return cur_line_no >= lines.lines.num - 1
	void nextLine()
		if endOfFile()
			setError("unerwartetes Dateiende")
			return
		cur_line_no ++
		cur_line = lines.lines[cur_line_no]
		cur_word = 0
		cur = cur_line.words[0]
	bool endOfLine()
		return cur_word >= cur_line.words.num - 1
	void next()
		if endOfLine()
			setError("unerwartetes Zeilenende")
			return
		cur_word ++
		cur = cur_line.words[cur_word]
	
	bool error
	void setError(string msg)
		print("---Fehler---\n")
		print("Zeile " + (cur_line.physical_line_no + 1) + " bei " + cur + "\n")
		print(msg)
		print("\n")
		error = true
	
	Variable* getVar(string name)
		for v in vars
			if v.name == name
				return v
		Variable *v = new Variable(name)
		vars.add(v)
		return v
	Variable* addConstNumber(string s)
		Variable* c = new Variable(s)
		if s.find(".", 0) >= 0
			c.setFloat(s.float())
		else
			c.setInt(s.int())
		consts.add(c)
		return c
	Variable* addConstString(string s)
		Variable* c = new Variable(s)
		c.setString(s)
		consts.add(c)
		return c
	SyntaxNode* getNuclearOperand()
		if isNumber(cur[0])
			return new SyntaxNodeVariable(addConstNumber(cur))
		if cur[0] == '"' // "
			return new SyntaxNodeVariable(addConstString(unescape(cur)))
		if isOperator(cur[0])
			setError("Variablennamen erwartet")
			return nil
		return new SyntaxNodeVariable(getVar(cur))
	SyntaxNode* getOperator()
		if !isOperator(cur[0]) and (cur != "and") and (cur != "or")
			setError("Operator erwartet")
			return nil
		return new SyntaxNodeOperator(cur)
	SyntaxNode* getOperandFunc()
		SyntaxNode* sn = new SyntaxNodeFunction(cur)
		next()
		if error
			return nil
		if cur != "("
			setError("( nach Funktionsnamen erwartet")
			return nil
		next()
		if error
			return nil
		if cur == ")"
			return sn
		while true
			SyntaxNode *param = getOperandGreedy()
			if error
				return nil
			sn.params.add(param)
			next()
			if cur != "," and cur != ")"
				setError(", oder ) nach Parameter erwartet")
				return nil
			if cur == ")"
				break
			next()
			if error
				return nil
		return sn
	SyntaxNode* getOperand()
		if cur == "("
			next()
			SyntaxNode *sn = getOperandGreedy()
			next()
			if cur != ")"
				setError(") erwartet")
				return nil
			return sn
		if cur_word+1 < cur_line.words.num
			if cur_line.words[cur_word+1] == "("
				return getOperandFunc()
		SyntaxNode* sn = getNuclearOperand()
		return sn
	SyntaxNode* getOperandGreedy()
		SyntaxNode*[] sn
		sn.add(getOperand())
		if error
			return nil
		while !endOfLine()
			if cur_line.words[cur_word + 1] == "," or cur_line.words[cur_word + 1] == ")"
				break
			next()
			if error
				return nil
			sn.add(getOperator())
			if error
				return nil
			next()
			if error
				return nil
			sn.add(getOperand())
			if error
				return nil
		return linkOperators(sn)
	SyntaxNode* linkOperators(SyntaxNode*[] sn)
		int[] rank
		for i in 0:(sn.num-1)/2
			SyntaxNodeOperator *op = sn[i*2+1]
			rank.add(op.rank())
		while sn.num > 2
			int rmin = 100, imin = 0
			for r,i in rank
				if r < rmin
					rmin = r
					imin = i
			sn[imin*2+1].params.add(sn[imin*2])
			sn[imin*2+1].params.add(sn[imin*2+2])
			sn.remove(imin*2+2)
			sn.remove(imin*2)
			rank.remove(imin)
		return sn[0]
	SyntaxNode *getSpecialCommandIf()
		int indent0 = cur_line.indent
		SyntaxNodeIf *sn = new SyntaxNodeIf
		next()
		sn.params.add(getOperandGreedy())
		if error
			return nil
		sn.block = parseBlock()
		if error
			return nil
		if endOfFile()
			return sn
		if lines.lines[cur_line_no + 1].indent != indent0 or lines.lines[cur_line_no + 1].words[0] != "else"
			return sn
		nextLine()
		// else
		sn.block_else = parseBlock()
		return sn
	SyntaxNode *getSpecialCommandWhile()
		int indent0 = cur_line.indent
		SyntaxNodeWhile *sn = new SyntaxNodeWhile
		next()
		sn.params.add(getOperandGreedy())
		if error
			return nil
		sn.block = parseBlock()
		if error
			return nil
		if endOfFile()
			return sn
		if lines.lines[cur_line_no + 1].indent != indent0 or lines.lines[cur_line_no + 1].words[0] != "else"
			return sn
		nextLine()
		// else
		sn.block_else = parseBlock()
		return sn
	SyntaxNode *parseLine()
		if cur == "if"
			return getSpecialCommandIf()
		if cur == "while"
			return getSpecialCommandWhile()
		SyntaxNode *sn = getOperandGreedy()
		if error
			return nil
		if !endOfLine()
			setError("hier sollte die Zeile enden?")
		return sn
	SyntaxNode *parseBlock()
		SyntaxNode *sn = new SyntaxNodeBlock
		nextLine()
		if error
			return nil
		int indent0 = cur_line.indent
		sn.params.add(parseLine())
		if error
			return nil
		while !endOfFile()
			if lines.lines[cur_line_no + 1].indent < indent0
				return sn
			if lines.lines[cur_line_no + 1].indent > indent0
				sn.params.add(parseBlock())
			else
				nextLine()
				sn.params.add(parseLine())
			if error
				return nil
		return sn
	
	void create(string source)
		error = false
		LiteralParser lp
		lines = lp.parse(source)
		cur_line_no = -1
		//lines.show()
		block = parseBlock()
	void show()
		block.show(0)
	void showVars()
		for v in vars
			v.show()

class Interpreter
	bool error
	void setError(string msg)
		print("----Fehler beim AusfÃ¼hren----\n")
		print(msg)
		print("\n")
		error = true
	void doNode(SyntaxTree syntax, SyntaxNode *sn, Variable *ret)
		Variable*[] params
		bool[] is_temp
		for p in sn.params
			if p.type == TYPE_VARIABLE
				SyntaxNodeVariable *vv = p
				params.add(vv.v)
				is_temp.add(false)
			else
				Variable *temp = new Variable
				doNode(syntax, p, temp)
				if error
					return
				params.add(temp)
				is_temp.add(true)
		if sn.type == TYPE_OPERATOR
			SyntaxNodeOperator *op = sn
			if op.op == "="
				*params[0] = *params[1]
			else if op.op == "+"
				*ret = *params[0]
				*ret += *params[1]
			else if op.op == "+="
				*params[0] += *params[1]
			else if op.op == "-"
				*ret = *params[0]
				*ret -= *params[1]
			else if op.op == "-="
				*params[0] -= *params[1]
			else if op.op == "*"
				*ret = *params[0]
				*ret *= *params[1]
			else if op.op == "*="
				*params[0] *= *params[1]
			else if op.op == "/"
				*ret = *params[0]
				*ret /= *params[1]
			else if op.op == "/="
				*params[0] /= *params[1]
			else if op.op == ">"
				ret.setInt(0)
				if params[0].compare(*params[1]) > 0
					ret.setInt(1)
			else if op.op == "<"
				ret.setInt(0)
				if params[0].compare(*params[1]) < 0
					ret.setInt(1)
			else if op.op == "=="
				ret.setInt(0)
				if params[0].compare(*params[1]) == 0
					ret.setInt(1)
			else if op.op == ">="
				ret.setInt(0)
				if params[0].compare(*params[1]) >= 0
					ret.setInt(1)
			else if op.op == "<="
				ret.setInt(0)
				if params[0].compare(*params[1]) <= 0
					ret.setInt(1)
			else if op.op == "and"
				ret.setInt(0)
				if params[0].v.int() > 0 and params[1].v.int() > 0
					ret.setInt(1)
			else
				setError("unbehandelter Operator: " + op.op)
		else if sn.type == TYPE_FUNCTION
			SyntaxNodeFunction *func = sn
			if func.func == "sin"
				FuncSin(ret, params)
			else if func.func == "print"
				FuncPrint(ret, params)
			else
				setError("unbekannte Funktion: " + func.func)
		else if sn.type == TYPE_IF
			Variable dummy
			SyntaxNodeIf *_if = sn
			if params[0].v.int() > 0
				doNode(syntax, _if.block, &dummy)
			else if _if.block_else
				doNode(syntax, _if.block_else, &dummy)
		else if sn.type == TYPE_WHILE
			Variable dummy
			SyntaxNodeWhile *_while = sn
			while params[0].v.int() > 0
				doNode(syntax, _while.block, &dummy)

				// reevaluate
				if sn.params[0].type != TYPE_VARIABLE
					doNode(syntax, sn.params[0], params[0])
					if error
						return
		for p,i in params
			if is_temp[i]
				delete p
	void run(SyntaxTree syntax)
		error = false
		Variable dummy
		doNode(syntax, syntax.block, &dummy)

void eval(string source)
	SyntaxTree syntax
	syntax.create(source)
	if syntax.error
		return
	if verbose
		syntax.show()
	Interpreter inter
	inter.run(syntax)
	if verbose
		syntax.showVars()

