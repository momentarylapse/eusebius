	void setType(int _type)
		if v.type != _type
			delete v
			if _type == TYPE_BOOL
				v = new DynamicValueBool
			else if _type == TYPE_INT
				v = new DynamicValueInt
			else if _type == TYPE_FLOAT
				v = new DynamicValueFloat
			else if _type == TYPE_STRING
				v = new DynamicValueString
	void setBool(bool b)
