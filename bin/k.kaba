void FuncSin(Variable* r, Variable*[] p)
	if p[0].v.type == TYPE_FLOAT
		DynamicValueFloat *p0f = p[0].v
		r.setFloat(sin(p0f.v))
	else if p[0].v.type == TYPE_INT
		DynamicValueInt *p0i = p[0].v
		r.setFloat(sin(p0i.v))

void FuncPrint(Variable *r, Variable*[] p)
	string s
	for pp in p
		if pp.v.type == TYPE_FLOAT
			DynamicValueFloat *ppf = pp.v
			s += ppf.v
		else if pp.v.type == TYPE_INT
			DynamicValueInt *ppi = pp.v
			s += ppi.v
		else if pp.v.type == TYPE_STRING
			DynamicValueString *pps = pp.v
			s += pps.v
		else
			s += "-empty-"
		s += " "
	print(s + "\n")

