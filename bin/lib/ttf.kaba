func hex(p: void&, size: int) -> string
	#return as_binary(p, size).hex()
	var s: string
	for i in 0:size
		s.add((p as char[0]&)[i])
	return s.hex()
func i2h(i: int) -> string
	return hex(&i, 4)

class BEUShort
	var c: char[2]
	func __int__() -> int
		let a = int(c[0])
		let b = int(c[1])
		return (a << 8) + b
class BESShort
	var c: char[2]
	func __int__() -> int
		let a = int(c[0])
		let b = int(c[1])
		var r = (a << 8) + b
		if (r & 0x8000) != 0
			r -= 1<<16
		return r
class BELong
	var x: char[4]
	func __int__() -> int
		let a = int(x[0])
		let b = int(x[1])
		let c = int(x[2])
		let d = int(x[3])
		return (a << 24) + (b << 16) + (c << 8) + d

class Fixed
	var a, b: BEUShort

class F214
	var t: BESShort
	func __float__() -> float
		return int(t) / 16384.0

