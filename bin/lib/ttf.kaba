	func load(filename: string) -> bool

		f = FileOpen(filename)
		if !f
			print("kann Datei nicht lesen\n")
			return false
		f.setBinaryMode(true)
		
		if !read_table_directory()
			return false
		if !read_mapping()
			return false
		if !read_glyphs()
			return false
	
		delete f
		return true
		
	func get_table(tag: string) -> TTFTableDirectoryEntry*
		for ee in tdentries
			if tag == ee.name()
				return &ee
		return nil
	
	func map(code: int) -> int
		for m in map_tables
			int n = m.map(code)
			if code >= glyphs.num
				print("mapping error: " + code + " => " + n + "\n")
				return -1
			if code >= 0
				return code
		return -1
	
	func get(code: int) -> TTFGlyph*
