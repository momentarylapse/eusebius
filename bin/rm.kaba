use "lib/std.kaba"


void _rm(string filename)
	if unlink(filename)
		return
	if lib_error == -ENOENT
		print("rm: " + filename + " existiert nicht")
	else if lib_error == -EISDIR
		print("rm: " + filename + " ist ein Verzeichnis")
	else
		print("rm: kann Datei nicht loeschen: " + filename)
	exit(lib_error)


void main()
	init_lib()
	string[] arg
	get_args(arg)
	
	for i in 1:arg.num
		_rm(arg[i])
	
	exit(0)
