use "lib/std.kaba"
use "lib/mtk/mtk.kaba"
use "lib/draw.kaba"

class TestWindow extends MtkWindow
	MtkLabel* l
	void __init__()
		super.__init__("Test", 600, 400)
		
		MtkGrid* g = new MtkGrid(2, 2)
		put(g)
	
		l = new MtkLabel("test")
		g.put(0, 0, l)
	
		MtkButton* b = new MtkButton("hallo")
		g.put(1, 0, b)
		
		MtkEdit* e1 = new MtkEdit
		g.put(0, 1, e1)
		
		MtkEdit* e2 = new MtkEdit
		g.put(1, 1, e2)

class Idle extends MtkIdle
	int n
	override void __init__()
		n = 0
	override void do()
		#window.l.set_text("" + window.x + " / " + window.y)
		n ++
		if n > 2000
			#window.close()
			exit(0)
		

TestWindow* window

void main()
	mtk_init()
	
	window = new TestWindow
	window.show()
	
	#mtk_add_idle(new Idle)
	
	mtk_run()
	
