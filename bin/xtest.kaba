use "lib/std.kaba"
use "lib/mtk/mtk.kaba"
use "lib/draw.kaba"

class TestWindow extends MtkWindow
	override void __init__()
		super.__init__("Test", 600, 400)

TestWindow *window

void main()
	mtk_init()
	
	window = new TestWindow
	if !window.buf
		print("client: kann kein Fenster erstellen\n")
		exit(-2)
	
	
	MtkGrid *g = new MtkGrid(2, 1)
	window.put(g)
	
	MtkLabel *l = new MtkLabel("test")
	g.put(0, 0, l)
	
	l = new MtkLabel("hallo")
	g.put(1, 0, l)
	
	window.show()
	
	mtk_run()
	
