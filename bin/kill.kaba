use "lib/std.kaba"

void main()
	init_lib()
	string[] arg
	get_args(arg)
	
	int signal = 9
	int[] pid
	
	if len(arg) > 1
		for i in 1:len(arg)
			int n = int(arg[i])
			if n < 0
				signal = -n
			else
				pid.add(n)
		for p in pid
			if !kill(p, signal)
				print("kill: process {{p}} not found")
				exit(-1)
	else
		print("kill: kill <PID>")
	exit(0)
