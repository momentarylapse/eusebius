use "lib/std.kaba"
use "lib/io.kaba"
use "lib/pci.kaba"

PCIController *pci
PCIDevice *dev

int temp1, temp2, temp3, temp4

void cpuid(int n, out int[4] o)
	temp1 = n
	asm{
		mov eax, temp1
		db 0x0f
		db 0xa2
		mov temp1, eax
		mov temp2, ebx
		mov temp3, ecx
		mov temp4, edx
	}
	o[0] = temp1
	o[1] = temp2
	o[2] = temp3
	o[3] = temp4
	
	
	#printh(n)
#	print ": "
#	for i in o
#		print " "
#		printh(i)
#	print("\n")

void show_cpu()
	print("   cpu:  ")
	int[4] o
	cpuid(0, o)
	
	string s
	#for i in [1,3,2]
	for j in 0:4
		s.add(o[1] >> (j*8))
	for j in 0:4
		s.add(o[3] >> (j*8))
	for j in 0:4
		s.add(o[2] >> (j*8))
	print(s)
	print("\n")
	
	#cpuid(0x8000000, o)
	cpuid(1, o)
	
	string[] caps
	if (o[3] & 1<<25) != 0
		caps.add("sse")
	if (o[3] & 1<<26) != 0
		caps.add("sse2")
	if (o[2] & 1<<0) != 0
		caps.add("sse3")
	
	cpuid(0x8000001, o)
	
	if (o[3] & 1<<0) != 0
		caps.add("x87")
	if (o[3] & 1<<23) != 0
		caps.add("mmx")
	if (o[3] & 1<<31) != 0
		caps.add("3dnow")
	if (o[3] & 1<<24) != 0
		caps.add("fxrestore")
	if (o[2] & 1<<6) != 0
		caps.add("sse4a")
	if (o[3] & 1<<29) != 0
		caps.add("64")
	print("{{caps}}\n")

void handler()
	print("---user handler---\n")

void main()
	init_lib()
	lib_print_endl = false
	string[] arg
	get_args(arg)
	
	pci = new PCIController()
	
	pci.scan()
	
	dev = pci.get(0x8029, 0x10ec)
	if dev
		dev.show()
		int addr = dev.get_io_addr(0)
		print("0x{{addr|8x}}\n")
	
	show_cpu()
	
	if !sigaction(23, handler)
		print("---E1\n")
	if !mapirq(1, 23) # key
		print("---E2\n")
	print("ok\n")
	while true
		sleep(1)
	
	exit(0)
