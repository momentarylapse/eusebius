	bool load(string filename)

		f = FileOpen(filename)
		if !f
			return false
		f.setBinaryMode(true)
		
		if !read_table_directory()
			return false
		if !read_mapping()
			return false
		if !read_glyphs()
			return false
	
		delete f
		return true
		
	TTFTableDirectoryEntry* get_table(string tag)
		for ee in tdentries
			if tag == ee.name()
				return &ee
		return nil
	
	int map(int code)
		for m in map_tables
			int n = m.map(code)
			if n >= glyphs.num
				print "mapping error: " + code + " => " + n
				return -1
			if n >= 0
				return n
		return -1
	
	TTFGlyph* get(int code)
		print "get " + code
		int n = map(code)
		print n
		if n < 0
			return &glyphs[0]
		return &glyphs[n]
	
	void update_codes()
	
		for m in map_tables
			if m.format == 6
				print "----------------------- 666"
				for n,i in m.glyph_id_array
					if n < glyphs.num
						glyphs[n].code = m.first_code + i
					//else
					print "E: " + n + " => " + (m.first_code + i)
			else if m.format == 4
				print "----------------------- 444"
				print m.end_code.num
				for i in 0:m.end_code.num
					print "----"
					print m.start_code[i]
					print m.end_code[i]
					print m.id_delta[i]
					for code in m.start_code[i]:(m.end_code[i]+1)
						int n = (code + m.id_delta[i]) & 0x0000ffff
						if n < glyphs.num
							glyphs[n].code = code
					//	else
						print "E: " + n + " => " + code
	
	
	void export(string filename)
	
		File *f = FileCreate(filename)
		f.setBinaryMode(true)
		
		f << glyphs.num
		int num_p = 0
		for g,i in glyphs
			f << g.code
			f << g.contours.num
			for c in g.contours
				f << num_p
				f << c.p.num
				num_p += c.p.num
		f << num_p
		int xx = 0
		for g,i in glyphs
			for c,ci in g.contours
				for p in c.p
					f << p.x
					f << p.y
					xx ++
		for g in glyphs
			for c in g.contours
				if c.flags.num > 0
					if (c.flags[0] & 1) == 0
						print "-----[0] not on curve!"
				for x in c.flags
					f << ((x & 1) != 0)
		
		
		delete(f)

class FontWindow : Window
	int index
	void __init__()
		super.__init__("test", -1, -1, 500, 500)
		addDrawingArea("!grabfocus", 0, 0, 0, 0, "area")
		index = 0
	
	overwrite void onKeyDown()
		if HuiGetEvent().key == KeyLeft
			index --
		if HuiGetEvent().key == KeyRight
			index ++
		index = loopi(index, 0, font.glyphs.num)
		redraw("area")
	
	float xx(float x)
		return 100 + x*0.1
	
	float yy(float y)
		return 100 + (1000-y)*0.1
	
	overwrite void onDraw()
		Painter *p = beginDraw("area")
		float w = p.width
		float h = p.height
		
		p.setColor(White)
		p.drawRect(0, 0, w, h)
		
		p.setColor(Black)
		p.drawStr(20, 20, index)
		
		TTFGlyph *g = &font.glyphs[index]
		p.drawStr(220, 20, g.code)
		string s
		s.add(g.code)
		p.drawStr(270, 20, s)
		
		for c in g.contours
			p.setColor(Black)
			for i in 0:c.p.num
				int i1 = (i+1) % c.p.num
				p.drawLine(xx(c.p[i].x), yy(c.p[i].y), xx(c.p[i1].x), yy(c.p[i1].y))
				
			for i in 0:c.p.num
				int i1 = (i+1) % c.p.num
				
				if (c.flags[i] & 1) != 0
					p.setColor(Red)
				else
					p.setColor(Blue)
				p.drawCircle(xx(c.p[i].x), yy(c.p[i].y), 3)
		
		p.end()
		
		
