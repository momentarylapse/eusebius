	bool load(string filename)

		f = FileOpen(filename)
		if !f
			return false
		f.setBinaryMode(true)
		
		if !read_table_directory()
			return false
		if !read_mapping()
			return false
		if !read_glyphs()
			return false
	
		delete f
		return true
		
	TTFTableDirectoryEntry* get_table(string tag)
		for ee in tdentries
			if tag == ee.name()
				return &ee
		return nil
	
	int map(int code)
		for m in map_tables
			int n = m.map(code)
			if code >= glyphs.num
				print "mapping error: " + code + " => " + n
				return -1
			if code >= 0
				return code
		return -1
	
	TTFGlyph* get(int code)
		print "get " + code
		int n = map(code)
		print n
		if n < 0
			return &glyphs[0]
		return &glyphs[n]

