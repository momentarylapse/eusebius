string hex(char[0]* p, int size)
	string s
	for i in 0:size
		s.add(p[i])
	return s.hex(false)
string i2h(int i)
	return hex(&i, 4)

class BEUShort
	char[2] c
	int int()
		int a = c[0]
		int b = c[1]
		return (a << 8) + b
class BESShort
	char[2] c
	int int()
		int a = c[0]
		int b = c[1]
		int r = (a << 8) + b
		if (r & 0x8000) != 0
			r -= 1<<16
		return r
class BELong
	char[4] x
	int int()
		int a = x[0]
		int b = x[1]
		int c = x[2]
		int d = x[3]
		return (a << 24) + (b << 16) + (c << 8) + d

class Fixed
	BEUShort a, b

class F214
	BESShort t
	float float()
		return t.int() / 16384.0

void read(File *f, char[0]* p, int size)
	string s = f.read(size)
	for i in 0:size
		p[i] = s[i]

int readL(File *f)
	BELong t
	read(f, &t, 4)
	return t.int()

int readUS(File *f)
	BEUShort t
	read(f, &t, 2)
	return t.int()

int readSS(File *f)
	BESShort t
	read(f, &t, 2)
	return t.int()

int readUB(File *f)
	int t = 0
	read(f, &t, 1)
	return t

float readF214(File *f)
	F214 t
	read(f, &t, 2)
	return t.float()

