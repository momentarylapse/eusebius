void main(string[] arg)
	if arg.num == 0
		return
	
	font = new TTF
	if !font.load(arg[0])
		return
	
	font.update_codes()
	
	if arg.num > 1
		font.export(arg[1])
	
	FontWindow *w = new FontWindow
	w.show()
	w.run()
	print "ok"


