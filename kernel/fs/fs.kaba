			read_str(name)
			FileEntry *e = FileSystem.add(name, FILE_TYPE_FILE, self, dest)
			//e.type =
			read_int()
			e.size = read_int()
			read_int() // NumParts = 1
			int first_block = read_int()
			int num_blocks = read_int()
			for i in 0:num_blocks
				e.add_block(first_block + i)
	
