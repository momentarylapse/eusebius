class MountPoint
	cstring type
	PartitionData *dev // nil => unused
	FileEntry *dest
	int block_offset
	int block_size
	
	int dev_blocks_per_block
	int dev_block_offset
	
	char[0] *buf
	int buf_used
	
	int inodes_per_block
	Ext2SuperBlock sb
	Ext2BlockGroupDescriptor bg
	bool readable, writable
	
	bool dirty
	
	int[0]* inode_bitmap
	int[0]* block_bitmap
	
	void *p_save_inode // int f(self, FileEntry*)
	void *p_alloc_block // int f(self)
	void *p_alloc_inode // int f(self)
	
	void __assign__(MountPoint o)
		nil
	
	void update_sizes(int _bs, int _bo)
		block_size = _bs
		dev_blocks_per_block = _bs / 512
		block_offset = _bo
		dev_block_offset = _bo / 512
	
	void read_block(int block_no, cstring *buf)
		for i in 0:dev_blocks_per_block
			Ata.readSector(dev.disk_no, dev.offset + block_no * dev_blocks_per_block + dev_block_offset + i    , 1, &buf[512 * i])

	void write_block(int block_no, cstring *buf)
		for i in 0:dev_blocks_per_block
			Ata.writeSector(dev.disk_no, dev.offset + block_no * dev_blocks_per_block + dev_block_offset + i    , 1, &buf[512 * i])
	
	int alloc_block()
		if !p_alloc_block
			return -1
		return call_p(p_alloc_block, self)
	
	int alloc_inode()
		if !p_alloc_inode
			return -1
		return call_p(p_alloc_inode, self)
	
	int save_inode(FileEntry *e)
		if !p_save_inode
			return -1
		return call_pp(p_save_inode, self, e)



class FileSystemData
	MountPoint[MAX_MOUNT_POINTS] mounts
	FileEntry *root
	
	void init()
		for m in mounts
			m.dev = nil
		root = add("-root-", FILE_TYPE_DIR, nil, nil)
	
	FileEntry *add(cstring name, int type, MountPoint *mount, FileEntry *parent)
		FileEntry *e = malloc(sizeof(FileEntry))
		e.num_blocks = 0
		e.blocks = nil
		strcpy(&e.name, &name)
		e.parent = parent
		e.type = type
		e.mount = mount
		e.next = nil
		e.first_sub = nil
		e.op = nil
		e.meta_dirty = false
		if parent
			parent.add(e)
		return e
	
	void del(FileEntry *e)
		if e.parent
			prints("--[del e.parent]---\n")
		else
			free(e)
	
	FileEntry *get(cstring path, FileEntry *cur_dir)
		int ppos = 0
		if path[0] == '/'
			ppos = 1
			cur_dir = root
			if path[1] == 0
				return root
		else if !cur_dir
			return nil
		FileEntry *e = cur_dir
		cstring sub
		bool has_more = true
		while has_more
			strcpy(&sub, &path[ppos])
			cstring name
			for i in 0:256
				if (sub[i] == '/') or (sub[i] == 0)
					has_more = (sub[i] == '/')
					ppos += i + 1
					name[i] = 0
					break
				name[i] = sub[i]
			e = e.get_sub(name)
			if !e
				return nil
		return e
	
	void get_name(cstring path, FileEntry *e)
		if e.parent
			get_name(path, e.parent)
			if e.parent.parent
				strcat(&path, &"/")
			strcat(&path, &e.name)
		else
			strcpy(&path, &"/")
		
	int mount(PartitionData *dev, FileEntry *dir, cstring fs_name)
		if !dev
			return -1
		if !dir
			return -1
		prints("mounte ")
		prints(fs_name)
		prints(" ")
		prints(dev.name)
		prints(" ")
		cstring dirname
		FileSystem.get_name(dirname, dir)
		prints(dirname)
		MountPoint *mp = nil
		for m in mounts
			if !m.dev
				mp = &m
		if !mp
			return -1
		mp.dest = dir
		mp.dev = dev
		mp.p_save_inode = nil
		mp.p_alloc_inode = nil
		mp.p_alloc_block = nil
		strcpy(&mp.type, &fs_name)
		if strcmp(&fs_name, &"michifs") == 0
			MountPointMichiFS *mp_michi = mp
			mp_michi.mount()
		else if strcmp(&fs_name, &"ext2") == 0
			MountPointExt2 *mp_ext2 = mp
			mp_ext2.mount()
		dir.mount = mp
		prints(" ok\n")
		return 0

