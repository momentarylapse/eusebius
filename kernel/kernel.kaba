const int KALIB_LOCATION = 0x00030000

//#disasm

void show_pvl()
	asm{
		db 0x9c // pushf
		pop eax
		mov __temp_i__, eax
	}
	int eflags = __temp_i__
	int pvl = (eflags >> 12) & 3
	prints("[PVL:")
	printi(pvl)
	prints("]")

void LoadKaLib()
	int h = KernelTask.sys_open("/kalib")
	if h < 0
		panic("kann KaLib-Datei nicht lesen!")
		return
	int addr = KALIB_LOCATION
	while true
		int r = KernelTask.sys_read(h, addr, 1024)
		if r <= 0
			break
		addr += r
	KernelTask.sys_close(h)

