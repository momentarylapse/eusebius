use common


struct TimeValue
	var sec: int
	var nanosec: int

	func mut clear()
		sec = 0
		nanosec = 0
	
	func is_before(t: TimeValue) -> bool
		if sec < t.sec
			return true
		if sec > t.sec
			return false
		return nanosec < t.nanosec

	func is_valid() -> bool
		return (nanosec >= 0) and (nanosec < 1000000000)
	
	func mut inc_nanosec(ns: int)
		nanosec += ns
  		if nanosec > 1000000000
  			sec ++
  			nanosec -= 1000000000
	
	func mut dec_nanosec(ns: int)
		nanosec -= ns
		if nanosec < 0
			sec --
			nanosec += 1000000000

	func mut add(t: TimeValue)
		sec += t.sec
		inc_nanosec(t.nanosec)
